extends layout 

append head 
    link(rel="stylesheet" href="/stylesheets/login.css")

block content
    div(class="page-container")
        div(class="left-page-container")
            img(id="isengard-map" src="../images/shire.png" alt="shire")
            h2(id="gandalf-quote")
                | All we have to decide is what to do
                br
                | with the time that is given to us."
                br
                | - Gandalf the grey
        div(class="right-page-container")
            div(class="right-page-nav")
                div(class="nav-buttons")
                    a(id="home-button" href="/") Home
                    a(id="sign-up-button" href="/users/signup") Sign up
            div(class="right-page-body")
                form(action='/users/login' method='post')
                    each error in loginErrors
                        span(class="login-fail-span")=error
                    h1 Ventured here before? Log in!
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div(class="label-container")
                        label(for="email") Email
                        span(class="error-messages")=errors.email
                    input(type="email" name="email" value=email)
                    div(class="label-container")
                        label(for="password") Password
                        span(class="error-messages")=errors.password
                    input(type="string" name="password")
                    button(class="submit-button") Log in!
                form(action="/users/login/guest" method='post' id="guest-form")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    button(class="submit-button" id="guest-user-button") Guest user